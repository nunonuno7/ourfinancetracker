modules = ["python-3.12", "nodejs-20", "web"]
run = "python3 manage.py runserver 0.0.0.0:3000"

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
run = ["sh", "-c", "python manage.py runserver 0.0.0.0:5000"]
build = ["sh", "-c", "python manage.py collectstatic --noinput && python manage.py migrate"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[workflows]
runButton = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = 22407102
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"
